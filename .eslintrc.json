{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "overrides": [
    {
      "files": [
        "src/**"
      ]
    }
  ],
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "airbnb-typescript",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier/prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "ignorePatterns": [
    "node_modules",
    "build"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "overrides": [
          {
            "files": "src/**/*.ts"
          }
        ],
        "arrowParens": "avoid",
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true 
      }      
    ],
    "arrow-parens": ["warn", "as-needed", {"requireForBlockBody": false}],
    "arrow-body-style": [
      "warn",
      "as-needed"
    ],
    "block-scoped-var": "error",
    "camelcase": "warn",
    "class-methods-use-this": "warn",
    "complexity": [
      "warn",
      10
    ],
    "curly": [
      "warn",
      "multi"
    ],
    "default-case-last": "error",
    "default-case": "error",
    "default-param-last": "error",
    "eqeqeq": "error",
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "max-depth": [
      "warn",
      4
    ],
    "no-console": "off",
    "no-duplicate-imports": 2,
    "no-else-return": "warn",
    "no-extra-bind": "error",
    "no-magic-numbers": "warn",
    "no-param-reassign": "error",
    "no-self-compare": 1,
    "no-sequences": "error",
    "no-undef": "warn",
    "no-useless-constructor": "off",
    "no-unneeded-ternary": "warn",
    "no-unused-expressions": "warn",
    "no-var": "error",
    "import/prefer-default-export": "off",
    "prefer-regex-literals": "warn"
  }
}
